@model KidKinder.Entities.About
@{
    ViewBag.Title = "UpdateAboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Hakkımızda Guncelleme Sayfası</h5>
                                <span>Hakkımızda ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">About ID</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AboutId, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim1</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AboutBigImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Baslık</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Baslık2</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Acıklama</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim2</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.SmallImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                
                                    <button class="btn btn-warning">Hakkımızda Bilgilerini Güncelle</button>
                                </form>
                            </div>
                        </div>
                        <!-- Basic Form Inputs card end -->
                    </div>
                </div>
            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

