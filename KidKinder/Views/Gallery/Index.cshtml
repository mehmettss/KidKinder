@model List<KidKinder.Entities.Gallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!-- Header Start -->
<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center"
         style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">Galeri</h3>
        <div class="d-inline-flex text-white">
            <p class="m-0"><a class="text-white" href="">Anasayfa</a></p>
            <p class="m-0 px-2">/</p>
            <p class="m-0">Gallery</p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Gallery Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">Galerimiz</span>
            </p>
            <h1 class="mb-4">Cocuklarınızın Okul Galerisi</h1>
        </div>
        <div class="row">
            <div class="col-12 text-center mb-2">
                <ul class="list-inline mb-4" id="portfolio-flters">
                    <li class="btn btn-outline-primary m-1 active" data-filter="*">
                        Hepsi
                    </li>
                    <li class="btn btn-outline-primary m-1" data-filter=".first">
                        Oyun
                    </li>
                    <li class="btn btn-outline-primary m-1" data-filter=".second">
                        Cizim
                    </li>
                    <li class="btn btn-outline-primary m-1" data-filter=".third">
                        Okuma
                    </li>
                </ul>
            </div>
        </div>
        <div class="row portfolio-container">
            @foreach (var item in Model)
            {
            <div class="@item.GalleryPart">
                <div class="position-relative overflow-hidden mb-2">
                    <img class="img-fluid w-100" src="@item.ImageUrl" alt="" />
                    <div class="portfolio-btn bg-primary d-flex align-items-center justify-content-center">
                        <a href="img/portfolio-1.jpg" data-lightbox="portfolio">
                            <i class="fa fa-plus text-white" style="font-size: 60px"></i>
                        </a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Gallery End -->
