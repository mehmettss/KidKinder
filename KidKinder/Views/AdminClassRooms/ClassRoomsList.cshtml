@model List<KidKinder.Entities.ClassRoom>
@{
    ViewBag.Title = "ClassRoomsList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi Tablosu</h5>
                        <span>Öğretmenler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sınıf Adı</th>
                                        <th>Acıklama</th>
                                        <th>Yas</th>
                                        <th>Toplam Saat</th>
                                        @*<th>Ders Saati</th>
                                        <th>Ucret</th>
                                        <th>Resim Uzantısı</th>*@
                                        <th>Sil</th>
                                       
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ClassRoomId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.AgeofKids</td>
                                            <td>@item.TotalSeat</td>
                                   

                                            <td><a href="/AdminClassRooms/DeleteClassRooms/@item.ClassRoomId/" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminClassRooms/UpdateClass/@item.ClassRoomId/" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminClassRooms/AddClass/" class="btn btn-primary">Yeni Sınıf Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

