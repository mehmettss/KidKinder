@model KidKinder.Entities.Admin

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Kullanıcı Girişi</h5>
                                <span>Kullanıcı ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Kullacı Adı</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Username" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Sifre</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Password" class="form-control">
                                        </div>
                                    </div>
                          
                                    <button class="btn btn-primary">Kullanıcıyı Kaydet</button>
                                </form>
                            </div>
                        </div>
                        <!-- Basic Form Inputs card end -->
                    </div>
                </div>
            </div>
            <!-- Page body end -->
        </div>
    </div>
    <!-- Main-body end -->
</div>

