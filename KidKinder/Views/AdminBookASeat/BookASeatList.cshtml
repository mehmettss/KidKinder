@model List<KidKinder.Entities.BookASeat>
@{
    ViewBag.Title = "BookASeatList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi Tablosu</h5>
                        <span>Öğretmenler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Mail</th>
                                        <th>Sil</th>
                                        <th>Guncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.BookASeatId</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td><a href="/AdminBookASeat/DeleteRezerve/@item.BookASeatId/" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminBookASeat/UpdateRezerve/@item.BookASeatId/" class="btn btn-success">Guncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminBookASeat/AddRezerve/" class="btn btn-primary">Yeni Rezervasyon Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



